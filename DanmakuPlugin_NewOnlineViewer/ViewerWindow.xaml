<Window x:Class="DanmakuPlugin_NewOnlineViewer.ViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DanmakuPlugin_NewOnlineViewer"
        mc:Ignorable="d"
        Title="ViewerWindow" Height="45" Width="140" ShowInTaskbar="False" ResizeMode="NoResize" WindowStartupLocation="Manual" IsTabStop="False" IsEnabled="False" AllowsTransparency="True" WindowStyle="None" Background="Black" Foreground="Black">
    <Window.Resources>
        <Style x:Key="DIN M">
            <Setter Property="TextElement.FontFamily" Value="#DIN Medium" />
        </Style>
    </Window.Resources>

    <Grid>
        <Label x:Name="labelViewer" Content="观众数" HorizontalAlignment="Left" Margin="0,10,0,9" VerticalAlignment="Center" Foreground="White" Height="26"  FontSize="12"/>
        <TextBlock x:Name="textCount" Style="{DynamicResource DIN M}" Foreground="White" FontSize="29.333" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,4,0">
           0
        </TextBlock>
    </Grid>
</Window>
